---
const interests = [
  "AI & Automation",
  "Cybersecurity",
  "Self-Hosting",
  "Open Source",
  "Smart Home",
  "Privacy-First Systems",
];

const experiences = [
  {
    title: "Freelance Technologist",
    company: "",
    period: "Mar 2023 – Present",
    highlights: [
      "Self-hosted homelab with Podman on RHEL, containerization & reverse proxy (Traefik)",
      "Home Assistant smart home automation in KVM VM",
      "Hugo portfolio site with CI/CD pipeline",
    ],
  },
  {
    title: "Technical Specialist",
    company: "Apple",
    period: "Oct 2021 – Jan 2023",
    highlights: [
      "Hardware and software troubleshooting at the Genius Bar",
      "Delivered technical support to a high volume of daily customers",
    ],
  },
  {
    title: "Public Support Specialist",
    company: "Foundever",
    period: "Jan 2021 – Sep 2021",
    highlights: [
      "NRW COVID-19 vaccination hotline, handling 75+ callers daily",
      "Provided clear guidance under high-pressure conditions",
    ],
  },
  {
    title: "Social Media Manager",
    company: "nussknagger GmbH",
    period: "Nov 2020 – Jan 2021",
    highlights: [
      "Planned and executed social media campaigns",
      "Lead generation and content strategy",
    ],
  },
  {
    title: "Project Manager",
    company: "JobTender24 GmbH",
    period: "Jul 2018 – Oct 2019",
    highlights: [
      "Managed recruitment projects and optimized internal processes",
      "Scaled candidate pipeline through structured workflows",
    ],
  },
];

const education = [
  {
    title: "B.A. Business Administration",
    institution: "Berlin School of Economics and Law (HWR Berlin)",
    period: "Apr 2024 – Present",
    highlights: [
      "Bridging business strategy with technical systems thinking",
    ],
  },
  {
    title: "Full-Stack Web Developer",
    institution: "Le Wagon",
    period: "Nov 2023",
    highlights: [
      "HTML, CSS, Bootstrap, JavaScript, SQL, Git, Ruby on Rails",
      "Final project: my kita – web app helping Berlin parents find kindergartens",
    ],
  },
  {
    title: "English Language Correspondent",
    institution: "IHK zu Lippe Detmold",
    period: "Mar 2016",
    highlights: [
      "Professional business English certification",
    ],
  },
];
---

<!-- About -->
<section id="about" class="py-24">
  <div class="mx-auto max-w-5xl px-6">
    <div class="fade-in flex flex-col items-center gap-12 md:flex-row md:items-start">
      <!-- Photo -->
      <div class="avatar-wrap flex-shrink-0">
        <img
          src="/avatar.png"
          alt="Daniel Guntermann"
          width="240"
          height="240"
          loading="lazy"
          class="avatar-img h-[240px] w-[240px] rounded-full object-cover"
        />
      </div>

      <!-- Text content -->
      <div class="flex-1">
        <h2 class="mb-6 font-mono text-2xl font-bold text-[#1a1a1a] dark:text-white">About Me</h2>
        <div class="space-y-4 leading-relaxed text-gray-500 dark:text-gray-400">
          <p>
            I'm a product-minded technologist with a focus on infrastructure automation,
            containerization, and cybersecurity. Based in Berlin, I run a self-hosted homelab
            powered by Podman on Red Hat Linux, automate workflows, and explore AI-driven tooling.
          </p>
          <p>
            Currently studying Business Administration at HWR Berlin, I bring a unique perspective
            that bridges technical systems with business strategy. I believe the best infrastructure
            serves people &ndash; not the other way around.
          </p>
          <p>
            I'm looking for a junior role where I can grow as a DevOps engineer while contributing
            real value from day one.
          </p>
        </div>

        <!-- Social link buttons -->
        <div class="mt-6 flex flex-wrap gap-3">
          <a
            href="https://github.com/danctrl"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary inline-flex items-center gap-2 rounded-lg px-5 py-2.5 text-sm"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M12 0C5.374 0 0 5.373 0 12c0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23A11.509 11.509 0 0112 5.803c1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576C20.566 21.797 24 17.3 24 12c0-6.627-5.373-12-12-12z"/></svg>
            GitHub
          </a>
          <a
            href="https://linkedin.com/in/danielguntermann"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary inline-flex items-center gap-2 rounded-lg px-5 py-2.5 text-sm"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433a2.062 2.062 0 01-2.063-2.065 2.064 2.064 0 112.063 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z"/></svg>
            LinkedIn
          </a>
          <a
            href="https://t.me/danielguntagram"
            target="_blank"
            rel="noopener noreferrer"
            class="btn-secondary inline-flex items-center gap-2 rounded-lg px-5 py-2.5 text-sm"
          >
            <svg class="h-4 w-4" fill="currentColor" viewBox="0 0 24 24"><path d="M11.944 0A12 12 0 000 12a12 12 0 0012 12 12 12 0 0012-12A12 12 0 0012 0a12 12 0 00-.056 0zm4.962 7.224c.1-.002.321.023.465.14a.506.506 0 01.171.325c.016.093.036.306.02.472-.18 1.898-.962 6.502-1.36 8.627-.168.9-.499 1.201-.82 1.23-.696.065-1.225-.46-1.9-.902-1.056-.693-1.653-1.124-2.678-1.8-1.185-.78-.417-1.21.258-1.91.177-.184 3.247-2.977 3.307-3.23.007-.032.014-.15-.056-.212s-.174-.041-.249-.024c-.106.024-1.793 1.14-5.061 3.345-.479.33-.913.49-1.302.48-.428-.008-1.252-.241-1.865-.44-.752-.245-1.349-.374-1.297-.789.027-.216.325-.437.893-.663 3.498-1.524 5.83-2.529 6.998-3.014 3.332-1.386 4.025-1.627 4.476-1.635z"/></svg>
            Telegram
          </a>
        </div>

        <!-- Interests -->
        <div class="mt-6">
          <p class="mb-2 text-xs font-medium uppercase tracking-wide text-gray-400">Interests</p>
          <div class="flex flex-wrap gap-2">
            {interests.map((tag) => (
              <span class="glass rounded-full px-3 py-1 text-sm text-gray-600 dark:text-gray-400">
                {tag}
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

<!-- Experience -->
<section id="experience" class="py-24">
  <div class="mx-auto max-w-5xl px-6">
    <h2 class="fade-in mb-12 font-mono text-2xl font-bold text-[#1a1a1a] dark:text-white">Experience</h2>

    <div class="timeline-line relative ml-4">
      {experiences.map((exp, i) => (
        <div class="timeline-entry fade-in-left relative mb-10 pl-8 last:mb-0" style={`transition-delay: ${i * 150}ms`}>
          <!-- Timeline dot -->
          <div class="timeline-dot absolute -left-[7px] top-1.5 h-3.5 w-3.5 rounded-full border-2 border-emerald-500 bg-[#f7f7f5] dark:bg-[#0a0a0a]" />

          <div class="section-card p-5">
            <div class="mb-2 flex flex-col gap-1 sm:flex-row sm:items-center sm:justify-between">
              <h3 class="font-mono font-semibold text-[#1a1a1a] dark:text-white">
                {exp.title}
                {exp.company && (
                  <span class="font-sans font-normal text-gray-500 dark:text-gray-400"> &ndash; {exp.company}</span>
                )}
              </h3>
              <span class="text-sm text-gray-400 dark:text-gray-500">{exp.period}</span>
            </div>
            <ul class="space-y-1 text-sm text-gray-500 dark:text-gray-400">
              {exp.highlights.map((h) => (
                <li class="flex gap-2">
                  <span class="mt-1.5 h-1 w-1 flex-shrink-0 rounded-full bg-gray-300 dark:bg-gray-600" />
                  {h}
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<!-- Education & Certifications -->
<section id="education" class="py-24">
  <div class="mx-auto max-w-5xl px-6">
    <h2 class="fade-in mb-12 font-mono text-2xl font-bold text-[#1a1a1a] dark:text-white">Education & Certifications</h2>

    <div class="timeline-line relative ml-4">
      {education.map((edu, i) => (
        <div class="timeline-entry fade-in-left relative mb-10 pl-8 last:mb-0" style={`transition-delay: ${i * 150}ms`}>
          <!-- Timeline dot -->
          <div class="timeline-dot absolute -left-[7px] top-1.5 h-3.5 w-3.5 rounded-full border-2 border-emerald-500 bg-[#f7f7f5] dark:bg-[#0a0a0a]" />

          <div class="section-card p-5">
            <div class="mb-2 flex flex-col gap-1 sm:flex-row sm:items-center sm:justify-between">
              <h3 class="font-mono font-semibold text-[#1a1a1a] dark:text-white">
                {edu.title}
                <span class="font-sans font-normal text-gray-500 dark:text-gray-400"> &ndash; {edu.institution}</span>
              </h3>
              <span class="flex-shrink-0 text-sm text-gray-400 dark:text-gray-500">{edu.period}</span>
            </div>
            <ul class="space-y-1 text-sm text-gray-500 dark:text-gray-400">
              {edu.highlights.map((h) => (
                <li class="flex gap-2">
                  <span class="mt-1.5 h-1 w-1 flex-shrink-0 rounded-full bg-gray-300 dark:bg-gray-600" />
                  {h}
                </li>
              ))}
            </ul>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
