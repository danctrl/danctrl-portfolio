---
const projects = [
  {
    title: "Podman-powered Homelab",
    description:
      "Lightweight homelab stack using Podman and systemd on RHEL. Containerized services with Traefik reverse proxy and Authentik authentication.",
    status: "Live",
    image: "/homelab.png",
    stack: ["Podman", "RHEL", "Traefik", "Systemd", "DevOps"],
    link: "https://github.com/danctrl/podman-containers",
  },
  {
    title: "Stadium – Smart Home",
    description:
      "Local-first Home Assistant instance running in a KVM virtual machine on RHEL. 409 entities, Zigbee/Matter integration, automated backups, secured with Traefik + Authentik.",
    status: "Live",
    image: "/smarthome.png",
    stack: ["Home Assistant", "KVM", "Zigbee", "Matter", "YAML"],
    link: "https://github.com/danctrl/home-assistant-stadium",
  },
  {
    title: "danctrl.dev Portfolio",
    description:
      "This website – built with Astro and Tailwind CSS, deployed on Cloudflare Pages with CI/CD. A meta-project showcasing DevOps thinking.",
    status: "Building",
    image: "/portfolio.png",
    stack: ["Astro", "Tailwind CSS", "Cloudflare Pages", "TypeScript"],
    link: "https://github.com/danctrl/danctrl-portfolio",
  },
  {
    title: "my kita",
    description:
      "Web application helping parents in Berlin find and apply to kindergartens. Built during Le Wagon coding bootcamp as a team project.",
    status: "Live",
    image: "/mykita.png",
    stack: ["Ruby on Rails", "PostgreSQL", "JavaScript", "Bootstrap"],
    link: "https://github.com/lamoureuxmarie/my-kita",
  },
];

const statusColors: Record<string, { bg: string; text: string; dot: string }> = {
  Live: {
    bg: "bg-emerald-500/10 dark:bg-emerald-500/15",
    text: "text-emerald-700 dark:text-emerald-400",
    dot: "bg-emerald-500",
  },
  Building: {
    bg: "bg-amber-500/10 dark:bg-amber-500/15",
    text: "text-amber-700 dark:text-amber-400",
    dot: "bg-amber-500",
  },
  Planning: {
    bg: "bg-blue-500/10 dark:bg-blue-500/15",
    text: "text-blue-700 dark:text-blue-400",
    dot: "bg-blue-500",
  },
};
---

<section id="projects" class="py-24">
  <div class="mx-auto max-w-5xl px-6">
    <h2 class="fade-in mb-12 font-mono text-xl font-bold text-[#1a1a1a] sm:text-2xl dark:text-white">Projects</h2>

    <div class="grid gap-6 sm:grid-cols-2">
      {projects.map((project, i) => {
        const colors = statusColors[project.status];
        return (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class="project-card section-card group relative block fade-in overflow-hidden"
            style={`transition-delay: ${i * 100}ms`}
          >
            {/* Thumbnail */}
            <div class="h-[200px] overflow-hidden bg-gray-100 dark:bg-white/5">
              <img src={project.image} alt={project.title} loading="lazy" class="h-full w-full object-cover transition-transform duration-300 group-hover:scale-105" />
            </div>

            <div class="p-6">
            {/* Header: title + status badge */}
            <div class="mb-3 flex items-start justify-between gap-3">
              <h3 class="font-mono font-semibold text-[#1a1a1a] dark:text-white">
                {project.title}
              </h3>
              <span class:list={[
                "inline-flex shrink-0 items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-medium",
                colors.bg,
                colors.text,
              ]}>
                <span class:list={["h-1.5 w-1.5 rounded-full", colors.dot, project.status === "Live" && "animate-pulse"]} />
                {project.status}
              </span>
            </div>

            {/* Description */}
            <p class="mb-4 text-sm leading-relaxed text-gray-500 dark:text-gray-400">
              {project.description}
            </p>

            {/* Stack tags */}
            <div class="flex flex-wrap gap-2">
              {project.stack.map((tech) => (
                <span class="rounded-md bg-gray-100 px-2 py-0.5 font-mono text-xs text-gray-500 dark:bg-white/5 dark:text-gray-500">
                  {tech}
                </span>
              ))}
            </div>

            {/* External link indicator */}
            <div class="mt-4 text-right text-gray-400 opacity-0 transition-all duration-300 group-hover:translate-x-0.5 group-hover:-translate-y-0.5 group-hover:text-emerald-500 group-hover:opacity-100 dark:text-gray-500 dark:group-hover:text-emerald-400">
              <svg class="inline" width="16" height="16" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="1.5">
                <path d="M6 2h8v8M14 2L6 10" stroke-linecap="round" stroke-linejoin="round" />
              </svg>
            </div>
            </div>
          </a>
        );
      })}
    </div>
  </div>
</section>
