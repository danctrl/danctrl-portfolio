---
const projects = [
  {
    title: "Podman-Powered Homelab",
    description:
      "Self-hosted infrastructure on Red Hat Linux with rootless Podman containers, Traefik reverse proxy, and automated deployments. Runs 10+ services including monitoring, DNS, and media.",
    status: "Live",
    featured: true,
    stack: ["Podman", "RHEL", "Traefik", "Ansible", "Bash"],
    link: "https://github.com/danctrl",
  },
  {
    title: "Smart Home Automation",
    description:
      "Home Assistant running in a KVM virtual machine on the homelab server. Custom automation workflows for lighting, climate, and security with MQTT integration.",
    status: "Live",
    featured: false,
    stack: ["Home Assistant", "KVM", "MQTT", "YAML"],
    link: "https://github.com/danctrl",
  },
  {
    title: "danctrl.dev",
    description:
      "This portfolio site — built with Astro and Tailwind CSS, deployed on Cloudflare Pages with GitHub Actions CI/CD. A meta-project showcasing DevOps thinking.",
    status: "Building",
    featured: false,
    stack: ["Astro", "Tailwind CSS", "Cloudflare Pages", "GitHub Actions"],
    link: "https://github.com/danctrl",
  },
  {
    title: "my kita",
    description:
      "Le Wagon final project — a web app helping Berlin parents find kindergartens. Built as a team with search, filtering, and map integration.",
    status: "Live",
    featured: false,
    stack: ["Ruby on Rails", "PostgreSQL", "JavaScript", "Bootstrap"],
    link: "https://github.com/danctrl",
  },
];

const statusColors: Record<string, { bg: string; text: string; dot: string }> = {
  Live: {
    bg: "bg-emerald-500/10 dark:bg-emerald-500/15",
    text: "text-emerald-700 dark:text-emerald-400",
    dot: "bg-emerald-500",
  },
  Building: {
    bg: "bg-amber-500/10 dark:bg-amber-500/15",
    text: "text-amber-700 dark:text-amber-400",
    dot: "bg-amber-500",
  },
  Planning: {
    bg: "bg-blue-500/10 dark:bg-blue-500/15",
    text: "text-blue-700 dark:text-blue-400",
    dot: "bg-blue-500",
  },
};
---

<section id="projects" class="py-24">
  <div class="mx-auto max-w-5xl px-6">
    <h2 class="fade-in mb-12 font-mono text-2xl font-bold text-[#1a1a1a] dark:text-white">Projects</h2>

    <div class="grid gap-6 sm:grid-cols-2">
      {projects.map((project, i) => {
        const colors = statusColors[project.status];
        return (
          <a
            href={project.link}
            target="_blank"
            rel="noopener noreferrer"
            class:list={[
              "project-card section-card group relative block p-6 fade-in",
              project.featured && "sm:col-span-2",
            ]}
            style={`transition-delay: ${i * 100}ms`}
          >
            {/* Featured badge */}
            {project.featured && (
              <div class="absolute -top-3 right-5">
                <span class="glass inline-flex items-center gap-1.5 rounded-full px-3 py-1 text-xs font-medium text-emerald-600 dark:text-emerald-400">
                  <svg class="h-3 w-3" fill="currentColor" viewBox="0 0 20 20">
                    <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z" />
                  </svg>
                  Featured
                </span>
              </div>
            )}

            {/* Header: title + status badge */}
            <div class="mb-3 flex items-start justify-between gap-3">
              <h3 class="font-mono font-semibold text-[#1a1a1a] dark:text-white">
                {project.title}
              </h3>
              <span class:list={[
                "inline-flex flex-shrink-0 items-center gap-1.5 rounded-full px-2.5 py-1 text-xs font-medium",
                colors.bg,
                colors.text,
              ]}>
                <span class:list={["h-1.5 w-1.5 rounded-full", colors.dot, project.status === "Live" && "animate-pulse"]} />
                {project.status}
              </span>
            </div>

            {/* Description */}
            <p class="mb-4 text-sm leading-relaxed text-gray-500 dark:text-gray-400">
              {project.description}
            </p>

            {/* Stack tags */}
            <div class="flex flex-wrap gap-2">
              {project.stack.map((tech) => (
                <span class="rounded-md bg-gray-100 px-2 py-0.5 font-mono text-xs text-gray-500 dark:bg-white/5 dark:text-gray-500">
                  {tech}
                </span>
              ))}
            </div>

            {/* Arrow indicator */}
            <div class="absolute bottom-5 right-5 text-gray-300 transition-all duration-300 group-hover:translate-x-1 group-hover:text-emerald-500 dark:text-gray-600 dark:group-hover:text-emerald-400">
              <svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
              </svg>
            </div>
          </a>
        );
      })}
    </div>
  </div>
</section>
